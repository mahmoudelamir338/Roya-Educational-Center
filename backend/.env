# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/roya-educational-center
MONGODB_TEST_URI=mongodb://localhost:27017/roya-educational-center-test

# JWT Configuration
JWT_SECRET=roya-educational-center-jwt-secret-key-2024-make-it-long-and-random-for-security
